<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Area Path Uploader</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Images/favicon.jpg">
</head>
<body class="">
    @*#2E7CF4*@
    
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#2E7CF4; ">
        <div class="container">
            <div class="navbar-header" style="color: #000000;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Area Path Uploader", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white;padding-left:30px" })
            </div>
            <div class="navbar-collapse collapse" style="float:right">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @*<li>@Html.ActionLink("Logout", "Logout", "Access", new { @style="color:white;"})</li>*@
                    <li><a href="../Access/Logout" style="color:white;">Logout</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="footer navbar navbar-default navbar-fixed-bottom">
            <p style="color:white;">&copy; @DateTime.Now.Year - Canarys Automation Pvt. Ltd</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style type="text/css">
    .footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 45px;
        background-color: #2E7CF4;
        padding-top: 8px;
        text-align: center;
        color: #ffffff;
    }
    .navbar-inverse {
        border-color: #2E7CF4;
    }

    .backgroundimg {
        background-image: url(../Images/background.jfif);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: calc(100vh)
    }
</style>